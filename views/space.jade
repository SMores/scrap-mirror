extends layout

block scripts
  script(src="/js/socketEmitters.js")

block content
  - var users = ["https://fbcdn-profile-a.akamaihd.net/hprofile-ak-xap1/v/t1.0-1/c1.95.477.477/p480x480/1920336_10152275444250993_2135489901_n.jpg?oh=bbaa145748095d6331cba2e63d34351e&oe=544B7BC0&__gda__=1412714693_09ab5f6cad5ec3a6e1b1a5cfbdf15e02","https://fbcdn-profile-a.akamaihd.net/hprofile-ak-xap1/v/t1.0-1/c0.0.480.480/p480x480/10176080_2520381682312_4890391499590307710_n.jpg?oh=9b62cd1a1e536d8baeb80f5b63b12aee&oe=544C61A6&__gda__=1414538666_07bda3f9b428206ce7dab047fcd01710"]

  header
    ul.users
      each user in users
        li
          img(src= user)

  section.content
    section.column.add
      article.add
        input(class="add", type="text", placeholder="Add something new")
    each column in space.columns
      section.column.normal
        each element, i in column.elements
          if element.contentType == 'text'
            article(class=element.contentType)
              p= element.content
              div.background
            article.add
              form
                input(type='hidden', name="columnId", value=column.id)
                input(type='hidden', name="index", value=i+1)
                input(class="add", type="text", name="content", placeholder="Add something new")
                input(type="submit", style="visibility: hidden;")
          if element.contentType == 'image'
            article(class=element.contentType)
              img(src= element.content)
            article.add
              input(class="add", type="text", placeholder="Add something new")
          if element.contentType == 'video'
            article(class=element.contentType)
              iframe(src='//player.vimeo.com/video/'+element.content+'?badge=0', width = '350', height='200', frameborder='0', webkitallowfullscreen='webkitallowfullscreen', mozallowfullscreen='mozallowfullscreen', allowfullscreen='allowfullscreen')
            article.add
              input(class="add", type="text", placeholder="Add something new")